<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:background="@drawable/bg_landscape_blur"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="singh.saurabh.connect.Profile_Page$PlaceholderFragment" >
	
    <RelativeLayout
        android:id="@+id/container_contactList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp"
        tools:context="singh.saurabh.connect.Profile_Page"
        tools:ignore="MergeRootFrame,HardcodedText" >

    <EditText
        android:id="@+id/person_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/person_email"
        android:layout_below="@+id/person_email"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:saveEnabled="true"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/person_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/person_name"
        android:layout_below="@+id/person_name"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:saveEnabled="true"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/person_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textCapWords"
        android:paddingLeft="10dp"
        android:saveEnabled="true"
        android:textColor="#fff" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/Clear"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/save"
        android:background="#fff"
        android:clickable="true"
        android:onClick="onClearClicked"
        android:text="Clear"
        android:textColor="#000" />

    <Button
        android:id="@+id/save"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="117dp"
        android:background="#fff"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onSaveClicked"
        android:text="Save"
        android:textColor="#000" />

    <Button
        android:id="@+id/fb"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/login_with_facebook"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/person_email"
        android:gravity="center"
        android:text="Tap the facebook button to attach your facebook profile"
        android:textColor="#fff"
        android:textSize="15sp"
        android:typeface="serif" />

</RelativeLayout>
    
    
  
    
</LinearLayout>
