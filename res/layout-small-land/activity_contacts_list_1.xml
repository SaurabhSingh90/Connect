<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1_blur"
    android:gravity="top|center" >

    <RelativeLayout
        android:id="@+id/TextDisplay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/template1"
            android:layout_width="330dp"
            android:layout_height="230dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/b1" />

        <TextView
            android:id="@+id/EmailTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/template1"
            android:layout_below="@+id/NameTextView1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28dp"
            android:text="john.carter@gmail.com"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="13sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/PhoneNumberTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/EmailTextView1"
            android:layout_below="@+id/EmailTextView1"
            android:layout_marginTop="20dp"
            android:text="+1(234)567-8900"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="13sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/NameTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/template1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="90dp"
            android:text="John Carter"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@id/template1"
            android:layout_alignTop="@id/template1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:onClick="onFaceBookClick"
            android:src="@drawable/fb" />

    </RelativeLayout>

</RelativeLayout>
